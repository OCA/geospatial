<odoo>
    <data>
        <record id="res_config_settings_view_form_distance_matrix" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.google_distance_matrix</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="200"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="after">
                    <div name="google_distance_matrix">
                        <h2>Google Distance Matrix</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="text-muted">
                                        <p>Set Google Distance Matrix API key</p>
                                        <span>Visit the <a href="https://developers.google.com/maps/documentation/distance-matrix/get-api-key"
                                                           target="_blank">Google Distance Matrix API page</a> for more information about obtaining an API key.</span>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <label for="google_distance_matrix_api_key" string="API Key"/>
                                            <field name="google_distance_matrix_api_key"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
